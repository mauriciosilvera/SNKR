
<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head') %>
</head>
<body>
    <header >
        <%- include ('./partials/header') %>
    </header>

    
    <main>
        <div class="slideshow-container">
            <div class="banner fade">
                <div class="flecha-izquierda" onclick="plusSlides(-1)"><i class="fas fa-chevron-left"></i></div>
                <img src="/images/baner2.jpg" alt="">
                <div class="flecha-derecha" onclick="plusSlides(1)"><i class="fas fa-chevron-right"></i></div>
            </div>
            <div class="banner fade">
                <div class="flecha-izquierda" onclick="plusSlides(-1)" ><i class="fas fa-chevron-left"></i></div>
                <img src="/images/baner1.jpg" alt="">
                <div class="flecha-derecha" onclick="plusSlides(1)" ><i class="fas fa-chevron-right"></i></div>
            </div>
            <div class="banner fade">
                <div class="flecha-izquierda" onclick="plusSlides(-1)" ><i class="fas fa-chevron-left"></i></div>
                <img src="/images/baner3.jpg" alt="">
                <div class="flecha-derecha" onclick="plusSlides(1)" ><i class="fas fa-chevron-right"></i></div>
            </div>

        </div>
        
        <section class="section-home">
            <% products.forEach(function (element) { %>
                <% if (element.category == 'home') { %>
                <article class="producto-home" >
                    <a href="/products/<%= element.id_product %>">
                        <img src="images/products/<%= element.image %>" alt=""> 
                        <h2><%= element.name %></h2>
                    </a>
                </article>
                <% } %>
            <% }); %>
        </section>
        
    </main>

    <footer>
        <%- include ('./partials/footer') %>
    </footer>
    <script src="/js/banner.js"></script>
</body>
</html>