<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/head') %>
</head>
<body>
    <header >
        <%- include ('./partials/header') %>
    </header>

    <section class="seccion-abmProductos">
        <form action="/products/new" enctype="multipart/form-data" method="POST" class="formulario-abmProductos">
                <h3 class="tÃ­tulo-abmProductos">CREACION DE PRODUCTOS</h3>
                <div class="etiqueta-abmProductos">
                    <label for="name">NOMBRE DEL PRODUCTO:</label>
                    <input type="text" name="name" id="name" required>
                </div>
                <div class="etiqueta-abmProductos">
                    <label for="brand">MARCA:</label>
                    <input type="text" name="brand" id="brand" required>
                </div>
                <div class="etiqueta-abmProductos">
                    <label for="detail">DESCRIPCION:</label>
                    <input type="text" name="detail" id="detail" required>
                </div>
                <div class="etiqueta-abmProductos">
                    <label for="gender">GENERO:</label>
                    <input type="text" name="gender" id="gender" required>
                </div>
                <!-- <div class="etiqueta-abmProductos">
                    <label for="size">TALLE:</label>
                    <input type="number" name="size" id="size" required> 
                </div> -->
                <div class="etiqueta-abmProductos">
                    <p>TALLE:</p>
                    <%sizes.forEach(size =>{ %>
                        <p><input type="checkbox" name="size" id="size"  class="inputform" value="<%= size.id_size %>"><%= size.size %></p>
                    <% }) %>
                <p ></p>
                </div>
                <div class="etiqueta-abmProductos">
                    <p>COLOR:</p>
                    <%colors.forEach(color =>{ %>
                        <p><input type="checkbox" name="color" id="color"  class="inputform" value="<%= color.id_color %>"><%= color.color %></p>
                    <% }) %>
                <p ></p>
                </div>
                <!-- <div class="etiqueta-abmProductos">
                    <label for="color">COLOR:</label>
                    <input type="text" name="color" id="color" required>
                </div> -->
                <div class="etiqueta-abmProductos">
                    <label for="price">PRECIO</label>
                    <input type="number" name="price" id="price" required> 
                </div>
                <div class="etiqueta-abmProductos">
                    <label>SELECCIONAR IMAGENES:</label>
                    <input type="file" name="image" accept="jpg" multiple >
                </div>
                <div class="botones">
                    <div class="boton">
                        <button type="submit">CREAR</button>
                    </div>

                </div>
            </form>
        </section>
    </main>

    <footer>
        <%- include ('./partials/footer') %>
    </footer>

</body>
</html>