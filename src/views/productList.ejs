                            <input type="checkbox" name="talle" value="36">
                            <label for="talle">36</label><br>
                            <input type="checkbox" name="talle" value="37">
                            <label for="talle">37</label><br>
                            <input type="checkbox" name="talle" value="38">
                            <label for="talle">38</label><br>
                            <input type="checkbox" name="talle" value="39">
                            <label for="talle">39</label><br>
                            <input type="checkbox" name="talle" value="40">
                            <label for="talle">40</label><br>
                            <input type="checkbox" name="talle" value="41">
                            <label for="talle">41</label><br>
                            <input type="checkbox" name="talle" value="42">
                            <label for="talle">42</label><br>
                            <input type="checkbox" name="talle" value="43">
                            <label for="talle">43</label><br>
                            <input type="checkbox" name="talle" value="44">
                            <label for="talle">44</label><br>
                    </div>
                    <div class="tallesIntermedios">
                        <input type="checkbox" name="talle" value="35.5">
                        <label for="talle">35.5</label><br>
                        <input type="checkbox" name="talle" value="36.5">
                        <label for="talle">36.5</label><br>
                        <input type="checkbox" name="talle" value="37.5">
                        <label for="talle">37.5</label><br>
                        <input type="checkbox" name="talle" value="38.5">
                        <label for="talle">38.5</label><br>
                        <input type="checkbox" name="talle" value="39.5">
                        <label for="talle">39.5</label><br>
                        <input type="checkbox" name="talle" value="40.5">
                        <label for="talle">40.5</label><br>
                        <input type="checkbox" name="talle" value="41.5">
                        <label for="talle">41.5</label><br>
                        <input type="checkbox" name="talle" value="42.5">
                        <label for="talle">42.5</label><br>
                        <input type="checkbox" name="talle" value="43.5">
                        <label for="talle">43.5</label><br>
                    </div>    
                    </form>
                </div>
                <label class="tituloFiltros">GENERO</label><br>
                <div class="boxFiltros">
                    <form action="/list/productobuscado" method="GET">
                        <input type="checkbox" name="genero" value="hombre">
                        <label for="genero">Hombre</label><br>
                        <input type="checkbox" name="genero" value="mujer">
                        <label for="genero">Mujer</label><br>
                        <input type="checkbox" name="genero" value="unisex">
                        <label for="genero">Unisex</label><br>
                    </form>
                </div>

                <button class="botonAplicarFiltros">Aplicar filtros</button>
            </section>

            <section class="listadoProductos">

                <% products.forEach(function(producto) { %>
                <article class="cajaProductoRecomendado">
                    <a href="/products/<%= producto.id_product %>">
                    <img class="fotoRecomendados" src="/images/products/<%= producto.image%>">
                    <div>
                        <p class="descripcionRecomendados"><%= producto.name %></p>
                        <p class="precioRecomendados">$<%= producto.price %></p>
                    </div>
                    </a>
                </article>
                
                <% }); %>
                
                <form action="/products" method="GET" class="numeroDePagina">
                <div class="numeroDePagina">
                    <span>P치gina  
                        <select class="botonNumeroDePagina" name="pagina">
                                
                                <% for(let i=1; i<=cantTotalDePaginas; i++){ %>
                                    <% if(i==pagina){%>
                                        <option name="num" value="<%=i%>" selected><%=  i %></option>
                                    <%} else {%>
                                        <option name="num" value="<%=i%>"><%=  i %></option>
                                    <% } %>
                                <%} %>
